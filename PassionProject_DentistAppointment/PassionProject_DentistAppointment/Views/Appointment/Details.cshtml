@model PassionProject_DentistAppointment.Models.AppointmentDto


@{
    ViewBag.Title = "View";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .back-link {
            display: inline-block;
            margin-bottom: 20px;
            text-decoration: none;
            color: #555;
        }

        .dentist-name {
            font-size: 24px;
            margin-bottom: 15px;
        }

        .info {
            margin-bottom: 10px;
        }

        .label {
            font-weight: bold;
        }

        .value {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/Appointment/List" class="back-link">Go back to list</a>
        <br />
        <a href="/Appointment/Edit/@Model.AppointmentID">Update</a>
        <br />
        <a href="/Appointment/DeleteConfirm/@Model.AppointmentID">Delete</a>
        <br />
        <h2 class="dentist-name">@Model.AppointmentDate</h2>     
        
    </div>
</body>
</html>



