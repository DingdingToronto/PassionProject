﻿@model PassionProject_DentistAppointment.Models.DentistDto

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Dentist</h2>

<form method="POST" action="/Dentist/Update/@Model.DentistID">
    <div>
        <label>ID</label>
        <input type="text" name="DentistID" value="@Model.DentistID" readonly />
    </div>
    <div>
        <label>Name</label>
        <input type="text" name="DentistName" value="@Model.DentistName" />
    </div>
    <div>
        <label>Specialization</label>
        <input type="text" name="Specialization" value="@Model.Specialization" />
    </div>
    <div>
        <label>Phone</label>
        <input type="text" name="Phone" value="@Model.Phone" />
    </div>
    <div>
        <label>Email</label>
        <input type="text" name="Email" value="@Model.Email" />
    </div>
    <div>
        <label>Address</label>
        <input type="text" name="Adress" value="@Model.Address" />
    </div>
    <div>
        <label>Rating</label>
        <input type="text" name="Rating" value="@Model.Rating" />
    </div>
    <div>


        <input type="submit" value="Update" />
    </div>

</form>
