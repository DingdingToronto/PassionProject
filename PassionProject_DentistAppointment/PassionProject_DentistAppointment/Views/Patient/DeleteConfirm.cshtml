@model PassionProject_DentistAppointment.Models.PatientDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }

        h2 {
            color: #333;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .info {
            margin-top: 15px;
            display: flex;
            align-items: center;
        }

        .label {
            font-weight: bold;
            margin-right: 10px;
            width: 100px;
        }

        .value {
            flex: 1;
        }

        input[type="submit"] {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            margin-top: 20px;
        }

            input[type="submit"]:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    <h2>Are you sure you want to delete this Patient?</h2>
    <a href="/Dentist/List">Cancel</a>
    <h2>@Model.PatientName</h2>
    <div class="info">
        <div class="label">Phone:</div>
        <div class="value">@Model.Phone</div>
    </div>
    <div class="info">
        <div class="label">Email:</div>
        <div class="value">@Model.Email</div>
    </div>
    <form action="/patient/Delete/@Model.PatientID" method="POST">
        <input type="submit" value="Confirm Delete" />
    </form>
</body>
</html>

