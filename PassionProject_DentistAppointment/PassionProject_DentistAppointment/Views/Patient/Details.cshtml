@model PassionProject_DentistAppointment.Models.Viewmodels.DetailsPatient


@{
    ViewBag.Title = "View";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .back-link {
            display: inline-block;
            margin-bottom: 20px;
            text-decoration: none;
            color: #555;
        }

        .dentist-name {
            font-size: 24px;
            margin-bottom: 15px;
        }

        .info {
            margin-bottom: 10px;
        }

        .label {
            font-weight: bold;
        }

        .value {
            margin-left: 10px;
        }
        /* Styles for the links */
        .update-link,
        .delete-link {
            display: inline-block;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
            margin-bottom: 10px;
        }

        /* Styles for the Update link */
        .update-link {
            background-color: #007bff;
            color: #ffffff;
            border: 1px solid #007bff;
        }

        /* Styles for the Delete link */
        .delete-link {
            background-color: #dc3545;
            color: #ffffff;
            border: 1px solid #dc3545;
        }

            /* Hover styles for both links */
            .update-link:hover,
            .delete-link:hover {
                background-color: #0056b3;
                color: #ffffff;
            }
            /*------------------------------------------------------------------------------------------------*/
        .dentist-bookings-section {
            font-family: Arial, sans-serif;
            max-width: 600px;
            margin: 0 auto;
        }

        .patient-name {
            font-weight: bold;
        }

        .dentist-booking {
            margin-bottom: 10px;
        }

        .dentist-name {
            display: inline-block;
            width: 200px;
        }

        .cancel-link {
            color: #ab2020;
            text-decoration: none;
            margin-left: 10px;
        }

        .new-appointment-section {
            margin-top: 20px;
        }

        .dentist-dropdown {
            width: 100%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        label {
            font-weight: bold;
        }

        .book-dentist-button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            .book-dentist-button:hover {
                background-color: #45a049;
            }

    </style>
</head>
<body>
    <div class="container">
        <a href="/Patient/List" class="back-link">Go back to list</a>
        <br />
        <a href="/Patient/Edit/@Model.SelectedPatient.PatientID" class="update-link">Update</a>
        <br />
        <a href="/Patient/DeleteConfirm/@Model.SelectedPatient.PatientID" class="delete-link">Delete</a>
        <br />
        <h2 class="dentist-name">@Model.SelectedPatient.PatientName</h2>
        <div class="info">
            <div class="label">Phone:</div>
            <div class="value">@Model.SelectedPatient.Phone</div>
        </div>
        <div class="info">
            <div class="label">Email:</div>
            <div class="value">@Model.SelectedPatient.Email</div>
        </div>
    </div>
    <div class="dentist-bookings-section">
        <h2>Dentist booked by <span class="patient-name">@Model.SelectedPatient.PatientName</span>:</h2>
        @foreach (var dentist in Model.BookedDentist)
        {
            <div class="dentist-booking">
                <a class="dentist-name">@dentist.DentistName</a>
                <a class="cancel-link" href="/patient/Unassociate/@Model.SelectedPatient.PatientID?DentistID=@dentist.DentistID">Cancel</a>
            </div>
        }

        <div class="new-appointment-section">
            <h4>Make a new Appointment for <span class="patient-name">@Model.SelectedPatient.PatientName</span></h4>
            <form method="POST" action="/patient/Associate/@Model.SelectedPatient.PatientID">
                <label for="dentist-dropdown">Select Dentist:</label>
                <select id="dentist-dropdown" name="DentistID" class="dentist-dropdown">
                    @foreach (var dentist in Model.AvailableDentist)
                    {
                        <option value="@dentist.DentistID">@dentist.DentistName</option>
                    }
                </select>
                <button type="submit" class="book-dentist-button">Book New Dentist</button>
            </form>
        </div>
    </div>

</body>

