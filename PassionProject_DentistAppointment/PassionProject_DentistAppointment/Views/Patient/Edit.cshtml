@model PassionProject_DentistAppointment.Models.PatientDto

@{
    ViewBag.Title = "Edit";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    h2 {
        color: #343a40;
        text-align: center;
    }

    form {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        margin: 20px auto;
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: #495057;
    }

    input[type="text"],
    input[type="tel"],
    input[type="email"] {
        width: calc(100% - 12px);
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ced4da;
        border-radius: 3px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        color: #fff;
        text-align: center;
        font-size: 16px;
        padding: 12px 20px;
        transition: background-color 0.3s ease;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>

<h2>Edit Patient</h2>

<form id="patientForm" method="POST" action="/patient/Update/@Model.PatientID" onsubmit="return validateForm()">
    <div>
        <label for="PatientID">ID</label>
        <input type="text" id="PatientID" name="PatientID" value="@Model.PatientID" readonly required />
    </div>
    <div>
        <label for="PatientName">Name</label>
        <input type="text" id="PatientName" name="PatientName" value="@Model.PatientName" required />
    </div>
    <div>
        <label for="Phone">Phone</label>
        <input type="tel" id="Phone" name="Phone" value="@Model.Phone" required />
    </div>
    <div>
        <label for="Email">Email</label>
        <input type="email" id="Email" name="Email" value="@Model.Email" required />
    </div>
    <div>
        <input type="submit" value="Update" />
    </div>
</form>

<script>
    function validateForm() {
        var form = document.getElementById('patientForm');
        if (!form.checkValidity()) {
            // If the form is invalid, display appropriate error messages
            form.reportValidity();
            return false;
        }
        return true;
    }
</script>



